{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "None"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "None",
        "System": "Warning"
      }
    }
  },
  "ConnectionStrings": {
    // La contraseña se sobrescribe desde la variable de entorno POSTGRES_ADMIN_PASSWORD si está configurada
    "DefaultConnection": "Host=localhost;Port=5432;Database=bets_db;Username=postgres;Password=PLACEHOLDER;Pooling=true;"
  },
  "Jwt": {
    "Issuer": "https://api.betstrading.online",
    "Audience": "bets-trading-api",
    "Key": ""
  },
  "Google": {
    "ClientId": "" // Se lee desde la variable de entorno GOOGLE_CLIENT_ID si está configurada
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": false,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 1000
      }
    ]
  }
}
